##########################################################################

if test "${SYSLOG_SERVER}"
	then
		exec /bin/busybox syslogd -n -R ${SYSLOG_SERVER}
	fi

if test "${DEBUG_MODE}" = "Y" -o "${SYSLOG_STDOUT}" = "Y"
	then
		exec /sbin/syslogd -f /usr/local/etc/syslog_debug.conf -r -n
	fi

mkdir -p /opt/data/logs
exec /sbin/syslogd -f /usr/local/etc/syslog.conf -r -n
