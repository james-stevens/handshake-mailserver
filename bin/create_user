#! /bin/sh

user="$1"
pass="$2"

adduser -G users -h "/opt/data/homedirs/${user}" -s /sbin/nologin -D "${user}"
{
echo "${pass}"
echo "${pass}"
echo "${pass}"
} | passwd "${user}"

echo "${pass}" | saslpasswd2 -p -c "${user}"


. /run/templates/__include__
{
echo "To: ${user}@${POLICY_DEFAULT_MAIL_DOMAIN}"
cat ${BASE:-/opt/data}/etc/welcome.eml
echo ""
echo ""
} | postmail -s 127.0.0.1 -f "manager@${POLICY_DEFAULT_MAIL_DOMAIN}" "${user}@${POLICY_DEFAULT_MAIL_DOMAIN}"
