#! /bin/sh

ip="192.168.1.144"
#	--read-only \
docker run \
	-m 1g \
	--env DEBUG_MODE=Y \
	--env SYSLOG_STDOUT=Y \
	--dns 192.168.8.110 \
	-v /opt/data/handshake-mailserver:/opt/data \
	-v /opt/github/handshake-mailserver/htdocs:/usr/local/htdocs \
	-v /opt/github/handshake-mailserver/python:/usr/local/python \
	-p ${ip}:80:80 -p ${ip}:443:443 \
	-p ${ip}:25:25 \
	-p ${ip}:143:143 -p ${ip}:110:110 -p ${ip}:993:993 -p ${ip}:995:995 \
	-it handshake-mailserver $*
